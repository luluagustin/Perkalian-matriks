int x, y, z, p, q, r, s, j, h, jumlah = 0;
int hasil[50][50];


void print(int p, int q, int hasil[][50])
{	
  cout << "Hasilnya perkalian matriks: " << endl;
  for(int i=0; i<p; i++){
	  for(int j=0; j<q; j++){
		  cout << hasil[i][j] << "\t";
	  }
	  cout << endl;
  }
}

